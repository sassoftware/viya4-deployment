{
  "description": "Direct the incoming document to the proper index based on the value of the NAMESPACE field." ,
  "processors": [
    {
       "lowercase": {
        "field": "properties.kubernetes.namespace_name"
      },
      "date_index_name": {
      "field": "@timestamp",
      "date_rounding": "d",
      "date_formats": ["ISO8601"], 
      "index_name_prefix":"kubernetes_cluster-{{properties.kubernetes.namespace_name}}-",
      "on_failure": [
        {
          "set": { "field":"pipeline_error","value":"{{ _ingest.on_failure_message}}"}
        }
        ]
    }}
  ]
}
